	
<div class="scroller_list_container">
	<div class="scroller_list_item">

		<div class="detail_item">
			<div class="detail_header">
				<div class="detail_name">{{ name }}</div>
				<div class="detail_years">{{ years | safe }}</div>
			</div>
			<div class="detail_text">
				<div class="detail_text_block">
					{% for file in filesOutput %}
						{% if file.name === 'Биография' %}
							<h1>{{ file.name }}</h1>
							{{ file.content | safe }}
						{% endif %}
					{% endfor %}
				</div>

				{% for file in filesOutput %}
					{% if file.name !== 'Биография' %}
					<div class="detail_text_block">
						<h1>{{ file.name }}</h1>
						{{ file.content | safe }}
					</div>
					{% endif %}
				{% endfor %}
				
			</div>
		</div>
		<a href="{% if id > 0 %}{{ id - 1 }}{% else %}14{% endif %}" class="nav-arr nav-arr-left">
			<svg viewBox="0 0 70 70"><circle class="arr" cx="35" cy="35" r="34.5"/><path class="arr" d="M46.13 51.26l-19-17 19-17"/></svg>
		</a>
		<a href="{% if id < 15 %}{{ id + 1 }}{% else %}0{% endif %}" class="nav-arr nav-arr-right">
			<svg viewBox="0 0 70 70"><circle class="arr" cx="35" cy="35" r="34.5"/><path class="arr" d="M26.72 17.26l19 17-19 17"/></svg>
		</a>

	</div>
</div>