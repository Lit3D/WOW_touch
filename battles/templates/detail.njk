	
<div class="scroller_list_container">
	<div class="scroller_list_item">

		<div class="detail_item">
			<div class="detail_header">
				{% for img in imagesOutput %}
					{% if img.name == "фото главное" %}
					  <div class="battle_main_pic"><img src="/{{ img.directory }}/{{ img.base }}" /></div>
					{% endif %}
				{% else %}
				Нет фото
				{% endfor %}
				<div class="detail_name">{{ name }}</div>
				<div class="detail_years">{{ dates | safe }}</div>
			</div>
			<div class="detail_text">

				{% for file in filesOutput %}
	
					<div class="detail_text_block">



						{{ file.tpContent | safe }}
					</div>

				{% endfor %}
				
			</div>
<div class="detail_images">
									{% for img in imagesOutput %}
							{% if img.name !== "фото главное" %}
							  <div><img src="/{{ img.directory }}/{{ img.base }}" /></div>
							{% endif %}
						{% endfor %}
						</div>
		</div>
		<a href="{{ baseUrl }}" class="nav-arr nav-arr-left">
			<svg viewBox="0 0 70 70"><circle class="arr" cx="35" cy="35" r="34.5"/><path class="arr" d="M46.13 51.26l-19-17 19-17"/></svg>
		</a>

	</div>
</div>